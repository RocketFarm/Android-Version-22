<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#133557"
    android:layout_height="match_parent"
    tools:context="com.fanpower.power.HomeActivity">

    <TextView
        android:textColor="@color/white_65_alpha"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/figtree_semibold"
        android:text="Fan Power"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/inlineView"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:elevation="8dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardBackgroundColor="#17426d"
        app:cardCornerRadius="16dp">

        <TextView
            android:textColor="@color/white_45_alpha"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/figtree_semibold"
            android:text="In-line View"
            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/individualCarousel"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:elevation="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        app:cardBackgroundColor="#17426d"
        app:cardCornerRadius="16dp">

        <TextView
            android:textColor="@color/white_45_alpha"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/figtree_semibold"
            android:text="Individual Carousel"
            />

    </androidx.cardview.widget.CardView>

</LinearLayout>